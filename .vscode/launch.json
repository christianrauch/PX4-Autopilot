{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SITL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/px4_sitl_default/bin/px4",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/px4_sitl_default/",
            // "environment": [
            //     {
            //         "name": "PX4_SYS_AUTOSTART",
            //         "value": "10017"
            //     }
            // ],
            "postDebugTask": "jmavsim kill",
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "PX4 ignore wq signals",
                        "text": "handle SIGCONT nostop noprint nopass",
                        "ignoreFailures": true
                    }
                ]
            },
        },
    ],
}
